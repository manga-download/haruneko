// NOTE: This typescript configuration is used for code inspection (e.g. VS Code, eslint, ...), but not for building sources or tests
{
    "compilerOptions": {
        "strict": false,
        "strictFunctionTypes": false,
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "skipLibCheck": true,
        "verbatimModuleSyntax": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "noEmit": true,
        "strictBindCallApply": true,
        "experimentalDecorators": true,
        "useDefineForClassFields": false
    },
    "include": [
        "src/**/*.d.ts",
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "src/**/*.svelte"
    ]
}
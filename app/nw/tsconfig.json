{
    "compilerOptions": {
        "outDir": "./build",
        "strict": true,
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "verbatimModuleSyntax": true,
        "forceConsistentCasingInFileNames": true,
        "strictBindCallApply": true,
        "removeComments": true
    },
    "include": [
        "src/**/*.d.ts",
        "src/**/*.ts"
    ]
}
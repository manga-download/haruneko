{
    "compilerOptions": {
        "strict": true,
        "strictFunctionTypes": false,
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "importsNotUsedAsValues": "error",
        "forceConsistentCasingInFileNames": true,
        "strictBindCallApply": true,
        "removeComments": true,
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*.d.ts",
        "src/**/*.ts"
    ]
}
// NOTE: This typescript configuration is used for code inspection and test runner, but nor for the build itself
{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "importsNotUsedAsValues": "error",
        "isolatedModules": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*.d.ts",
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "src/**/*.svelte"
    ]
}
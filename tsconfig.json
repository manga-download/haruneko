// NOTE: This typescript configuration is used for code inspection (e.g. VS Code, eslint, ...), but not for building sources or tests
{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "importsNotUsedAsValues": "error",
        "isolatedModules": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "noEmit": true,
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*.d.ts",
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "src/**/*.svelte"
    ]
}
{
    "name": "hakuneko",
    "title": "HakuNeko",
    "description": "Manga, Anime & Novel Downloader",
    "license": "Unlicense",
    "homepage": "https://git.io/hakuneko",
    "type": "module",
    "main": "https://haruneko.pages.dev",
    "scripts": {
        "check": "eslint ./src && svelte-check  --tsconfig=tsconfig.json && vue-tsc --skipLibCheck --noEmit",
        "build:web": "vite build",
        "build:app": "node scripts/build-app.mjs",
        "test": "jest --detectOpenHandles --config=test/jest.config.js",
        "test:e2e": "npm run build:web && npm run build:app -- --url=http://localhost:5000 && jest --runInBand --config=test/jest.e2e.js",
        "serve:web-dev": "vite",
        "serve:web-prod": "npm run build:web && vite preview",
        "launch:app-dev": "npm run build:app -- --url=http://localhost:3000 && nw build.app",
        "launch:app-prod": "npm run build:app -- --url=http://localhost:5000 && nw build.app"
    },
    "engines": {
        "node": ">=16.13.0",
        "npm": ">=8.1.0"
    },
    "dependencies": {
        "fs-extra": "9.1.0",
        "fuse.js": "^6.5.3"
    },
    "devDependencies": {
        "@sveltejs/svelte-virtual-list": "^3.0.1",
        "@sveltejs/vite-plugin-svelte": "^1.0.0-next.30",
        "@tsconfig/svelte": "^2.0.1",
        "@types/chrome": "^0.0.176",
        "@types/fs-extra": "^9.0.13",
        "@types/jest": "^27.4.0",
        "@types/jsdom": "^16.2.14",
        "@types/react": "^17.0.33",
        "@types/react-dom": "^17.0.10",
        "@typescript-eslint/eslint-plugin": "^5.9.1",
        "@typescript-eslint/parser": "^5.9.1",
        "@vitejs/plugin-react": "^1.0.7",
        "@vitejs/plugin-vue": "^2.0.0",
        "carbon-components-svelte": "^0.51.2",
        "carbon-icons-svelte": "^10.44.3",
        "eslint": "^8.6.0",
        "jest": "^27.4.7",
        "jest-junit": "^13.0.0",
        "jest-mock-extended": "^2.0.4",
        "jsdom": "^19.0.0",
        "nw": "0.60.0-sdk",
        "plist": "^3.0.4",
        "puppeteer-core": "^13.0.1",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "svelte": "^3.44.0",
        "svelte-check": "^2.2.7",
        "svelte-preprocess": "^4.9.8",
        "ts-jest": "^27.1.2",
        "ts-node": "^10.4.0",
        "tslib": "^2.3.1",
        "typescript": "^4.4.4",
        "vite": "^2.7.10",
        "vue": "^3.2.25",
        "vue-tsc": "^0.29.8",
        "yargs": "^17.3.1"
    }
}

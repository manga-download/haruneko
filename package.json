{
    "name": "hakuneko",
    "title": "HakuNeko",
    "description": "Manga, Anime & Novel Downloader",
    "license": "Unlicense",
    "homepage": "https://git.io/hakuneko",
    "type": "module",
    "main": "https://haruneko.pages.dev",
    "scripts": {
        "check": "eslint ./src ./test && svelte-check --tsconfig=tsconfig.json --use-new-transformation && vue-tsc --skipLibCheck --noEmit",
        "build:web": "vite build",
        "build:app": "node scripts/build-app.mjs",
        "test": "jest --detectOpenHandles --config=test/jest.config.js",
        "test:e2e": "npm run build:web && npm run build:app -- --url=http://localhost:5000 && jest --runInBand --config=test/jest.e2e.js",
        "serve:web-dev": "vite --port=3000 --strictPort",
        "serve:web-prod": "npm run build:web && vite preview --port=5000 --strictPort",
        "launch:app-dev": "npm run build:app -- --url=http://localhost:3000 && nw build.app",
        "launch:app-prod": "npm run build:app -- --url=http://localhost:5000 && nw build.app"
    },
    "engines": {
        "node": ">=16.13.0",
        "npm": ">=8.1.0"
    },
    "dependencies": {
        "fs-extra": "10.1.0"
    },
    "devDependencies": {
        "@sveltejs/svelte-virtual-list": "^3.0.1",
        "@sveltejs/vite-plugin-svelte": "^1.0.0-next.42",
        "@tsconfig/svelte": "^3.0.0",
        "@types/chrome": "^0.0.193",
        "@types/fs-extra": "^9.0.13",
        "@types/jest": "^28.1.4",
        "@types/jsdom": "^16.2.14",
        "@types/nw.js": "^0.13.14",
        "@types/react": "^18.0.15",
        "@types/react-dom": "^18.0.6",
        "@types/wicg-file-system-access": "^2020.9.5",
        "@typescript-eslint/eslint-plugin": "^5.30.5",
        "@typescript-eslint/parser": "^5.30.5",
        "@vitejs/plugin-react": "^1.3.2",
        "@vitejs/plugin-vue": "^2.3.3",
        "carbon-components-svelte": "^0.67.0",
        "carbon-icons-svelte": "^11.1.0",
        "eslint": "^8.19.0",
        "fuse.js": "^6.6.2",
        "jest": "^28.1.2",
        "jest-environment-jsdom": "^28.1.2",
        "jest-junit": "^14.0.0",
        "jest-mock-extended": "^2.0.6",
        "jsdom": "^20.0.0",
        "lit": "^2.2.7",
        "nw": "0.66.0-sdk",
        "plist": "^3.0.5",
        "puppeteer-core": "^15.3.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "svelte": "^3.48.0",
        "svelte-check": "^2.8.0",
        "svelte-navigator": "^3.1.6",
        "svelte-preprocess": "^4.10.7",
        "ts-jest": "^28.0.5",
        "ts-node": "^10.8.2",
        "tslib": "^2.4.0",
        "typescript": "^4.7.4",
        "vite": "^2.9.13",
        "vue": "^3.2.37",
        "vue-tsc": "^0.38.3",
        "yargs": "^17.5.1"
    }
}

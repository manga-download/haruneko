{
    "name": "haruneko",
    "title": "HaruNeko",
    "description": "Manga, Anime & Novel Downloader",
    "license": "Unlicense",
    "homepage": "https://github.com/manga-download/haruneko",
    "type": "module",
    "workspaces": [
        "web",
        "app/nw",
        "app/electron",
        "docs"
    ],
    "devDependencies": {
        "@stylistic/eslint-plugin": "5.2.3",
        "@types/chrome": "0.1.4",
        "@types/jsdom": "21.1.7",
        "@types/nw.js": "0.92.0",
        "eslint": "9.33.0",
        "eslint-plugin-tsdoc": "0.4.0",
        "jsdom": "26.1.0",
        "puppeteer-core": "24.16.2",
        "tslib": "2.8.1",
        "typescript": "5.9.2",
        "typescript-eslint": "8.39.1",
        "vite": "7.1.2",
        "vitest": "3.2.4",
        "vitest-mock-extended": "3.1.0"
    },
    "scripts": {
        "check": "npm run check --workspaces",
        "test": "npm run test --workspaces",
        "test:e2e": "npm run build --workspaces && vitest run --config=test/vitest.e2e.js",
        "test:websites": "npm run build --workspaces && vitest run --config=test/vitest.websites.js",
        "npm:clean-install": "npm update --package-lock-only && npm ci"
